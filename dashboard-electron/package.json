{
  "name": "setera-dashboard",
  "version": "1.59.0",
  "description": "SETERA Ferramentas Dashboard - Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-portable": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["setera", "dashboard", "tools", "desktop"],
  "author": "SETERA",
  "license": "ISC",
  "build": {
    "appId": "com.setera.ferramentas",
    "productName": "SETERA-Ferramentas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraFiles": [
      "assets/logo.ico"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "./assets/logo.ico"
    },
    "portable": {
      "artifactName": "SETERA-Ferramentas.exe"
    }
  },
  "dependencies": {
    "express": "^4.21.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.5"
  }
}
